@{
    ViewData["Title"] = "Contacs";
}

<div class="text-center">
    <h1 class="display-4">Contacts</h1>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Phone Number</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.PhoneNumber</td>
                <td>
                    <a asp-action="CreateEditContact" asp-route-id="@contact.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="DeleteContact" asp-route-id="@contact.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
